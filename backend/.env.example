# Environment
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database
DATABASE_URL=sqlite:///./app.db

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Azure Text-to-Speech
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here
AZURE_VOICE_NAME=en-US-JennyNeural

# Mubert Music API
MUBERT_API_KEY=your_mubert_api_key_here
MUBERT_LICENSE=your_mubert_license_here

# Story Configuration
STORY_MIN_LENGTH=400
STORY_MAX_LENGTH=600
STORY_TARGET_DURATION=240
TARGET_AGE_DEFAULT=5-7

# Audio Configuration
AUDIO_FORMAT=mp3
AUDIO_BITRATE=128k
AUDIO_SAMPLE_RATE=44100

# File Storage
STORIES_DIR=./stories
MAX_STORY_FILE_SIZE_MB=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
